<h3>Корзина</h3>

<div id="basket"> {{!-- что бы не создавать обработчик для каждой отльно--}}
    {{#if courses.length}}
    <table>
        <thead>
            <tr>
                <th>Название</th>
                <th>Количество</th>
                <th>Действие</th>
            </tr>
        </thead>
        {{#each courses}}
        <tr>
            <td>{{title}}</td>
            <td>{{count}}</td>
            <td>
                <button class="btn btm-small js-remove" data-id="{{id}}" data-csrf="{{@root.csrf}}">Удалить</button>
            </td>
        </tr>
        {{/each}}
    </table>
    <p><strong>Цена: </strong><span class="price">{{price}}</span></p>
    <form action="/orders" method="POST">
        <input type="hidden" name="_csrf" value="{{csrf}}">
        <button class="btn" type="submit">Выполнить заказ</button>
    </form>
    {{else}}
    <p>Корзина пуста</p>
    {{/if}}
</div>